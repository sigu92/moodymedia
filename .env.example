# Supabase Configuration
VITE_SUPABASE_PROJECT_ID="your_project_id_here"
VITE_SUPABASE_PUBLISHABLE_KEY="your_supabase_anon_key_here"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres
DB_HOST=db.your-project.supabase.co
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=true

# Stripe Payment Configuration
# Get these keys from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
# For development, use test keys (starting with pk_test_ and sk_test_)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Payment System Toggle
# Set to 'true' to use real Stripe payments, 'false' to use mock payments
VITE_USE_STRIPE_PAYMENTS=false

# VAT Configuration
VITE_VAT_RATE=0.25

# Development Environment
# Set to 'true' to enable development features and warnings
VITE_DEV_MODE=true

# Stripe Webhook Configuration (for production)
# Get this from Stripe Dashboard > Webhooks section
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
